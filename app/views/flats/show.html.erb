<html>
  <body style="background-color: white;">
  <div class="container">
    <div class="card-trip">
    <img src="https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8YXBhcnRtZW50fGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=1200&q=60" />
      <div class="card-trip-infos">
        <div>
          <form class="row g-3">
            <div class="col-md-3">
              <h3><%= @flat.title %></h3>
            </div>
             <div class="col-md-8">
              <h3><%= @flat.rating %></h3>
            </div>
              <div class="col-md-1">
                <h2 class="card-trip-pricing">$<%= @flat.price %></h2>
              </div>
                <div class="col-md-12">
                  <p>Type of the accomodation: <%= @flat.flat_type %></p>
                </div>
                  <div class="col-md-12">
                    <p>Capacity of the accomodation: <%= @flat.capacity %></p>
                  </div>
                <div class="col-md-12">
                  <p>Address: <%= @flat.address %></p>
                </div>
              <div class="col-12">
                <p><%= @flat.description %></p>
              </div>
            <div class="d-grid gap-2 col-6 mx-auto">
              <%= link_to 'Book this Flat', new_flat_booking_path(@flat), class: 'btn btn-secondary' %>
              <%= link_to 'Back to all flats', flats_path, class: 'btn btn-secondary' %>
            </div>
            <div class="shadow" style="width: 100%; height: 600px; border-radius: 15px; margin-top: 40px;"
                data-controller="map"
                data-map-markers-value="<%= @markers.to_json %>"
                data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>
