<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-black">
<h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>

<div class='container' style='text-align: center;'>
  <ul class='list-group'>
    <% @flats.each do |flat| %>
    <div class="d-flex">
        <li class='card-body text-center list-group-item m-3 p-2' style="width: 18rem;">
        <img src="https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8YXBhcnRtZW50fGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=1200&q=60" class="card-img-top" alt="...">
          <h5 class='card-title m-2'><%= link_to flat.title.capitalize, flat_path(flat) %> $<%= flat.price %></h5>
          <br>
         <h5><span class="badge rounded-pill text-bg-dark">Rating: <%= flat.rating %></span></h5>
        <% end %>
        </li>
    </div>
  </ul>

  <div>
<%= link_to 'Create a Flat', new_flat_path, class: 'btn btn-primary' %>
</div>


  <div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>


</div>
